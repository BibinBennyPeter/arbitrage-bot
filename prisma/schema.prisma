// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Opportunity {
  id          Int      @id @default(autoincrement())
  dex         String
  chain       Int
  pair        String
  token0      String
  token1      String
  priceBuy    Float
  priceSell   Float
  profit      Float
  reserve0    String
  reserve1    String
  fee         Float
  timestamp   Int
}
